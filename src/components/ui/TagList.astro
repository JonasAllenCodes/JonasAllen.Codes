---
const { tags } = Astro.props;
---

<ul class="tag-list">
    {tags.map((tag) => (
        <li class="tag-item">{tag}</li>
    ))}
</ul>

<style>
    .tag-list {
        display: flex;
        gap: 1rem;
        padding: 0;
        list-style: none;
    }
    .tag-item {
        padding-inline: 0.5rem;
        color: var(--background-color);
        background-color: var(--foreground-color);
    }
</style>