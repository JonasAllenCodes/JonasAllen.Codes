---
import BaseHead from "@components-layout/BaseHead.astro";
import Header from "@components-layout/Header.astro";
import Footer from "@components-layout/Footer.astro";

const { title } = Astro.props;

---

<html lang="en">
	<BaseHead title={title} />
	<body>
        <div class="viewport">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>

<style is:global>
	:root {
        --page-width: 1440px;
        --content-width: 34rem;

		--foreground-color: #00be00;
		--background-color: black;
		--cta-color: white;

		--base-font-size: 1rem;
		
		font-size: 1.3rem;
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: var(--tenso-bold-font);
	}
	p {
		max-width: var(--content-width);
	}
	a {
		color: var(--cta-color);
	}
	hr {
		border-style: solid;
	}
	.bold-wide {
        vertical-align: top;
        display: inline-block;
        transform: scaleX(1.6);
        transform-origin: 0 0;
	}
	.visuallyhidden {
		position: absolute;

		width: 1px;
		height: 1px;
		margin: -1px;
		border: 0;
		padding: 0;

		clip: rect(0 0 0 0);
		overflow: hidden;
	}
	.heading-wrap {
		display: flex;
		gap: 0.3rem;
		align-items: baseline;
	}
	.heading-fill {
		background-color: var(--foreground-color);
		border: none;
		content: "";
		display: block;
		flex-grow: 1;
		height: 2px;
	}
	.heading-link {
        text-decoration: none;
        font-size: 1.25rem;
        font-weight: bold;
	}
	body {
		background-color: var(--background-color);
		color: var(--foreground-color);
	}
	.viewport {
        min-height: 100vh;
		max-width: 100vw;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
	.viewport .main {
		max-width: var(--page-width);
        margin-left: auto;
        margin-right: auto;
		margin-bottom: auto;
		padding: 1rem;
	}
</style>
